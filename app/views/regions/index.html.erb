<!-- app/views/regions/index.html.erb -->
<div class="container mt-3">
  <h1>Regions</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @regions.each do |region| %>
        <tr>
          <td>
            <%= link_to region.name, region_path(region), class: 'text-decoration-none' %>
          </td>
          <td>
            <%= link_to 'Show', region_path(region), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
